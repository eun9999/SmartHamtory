<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/machine_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비: 프레스"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무게(kg):"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name1" />

    <TextView
        android:id="@+id/machine_data1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/machine_data1"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name1" />

    <EditText
        android:id="@+id/error_content1"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_register_bg"
        android:hint="   에러 내용 "
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        app:layout_constraintTop_toTopOf="@id/machine_data1"
        app:layout_constraintRight_toLeftOf="@id/checkBox1"
        android:layout_marginRight="10dp"/>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:buttonTint = "#007bff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data1"
        android:layout_marginRight="30dp" />



    <TextView
        android:id="@+id/machine_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비: 차체조립"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_data1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="압력(kg):"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/machine_data2"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name2" />

    <EditText
        android:id="@+id/error_content2"
