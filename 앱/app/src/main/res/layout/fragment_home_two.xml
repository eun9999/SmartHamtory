        app:layout_constraintTop_toTopOf="@id/machine_data2"
        app:layout_constraintRight_toLeftOf="@id/checkBox2"
        android:layout_marginRight="10dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:buttonTint = "#007bff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data2"
        android:layout_marginRight="30dp" />


    <TextView
        android:id="@+id/machine_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비: 도장"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_data2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data3"
        android:layout_width="wrap_content"
