        app:layout_constraintLeft_toRightOf="@id/machine_data3"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name3" />

    <EditText
        android:id="@+id/error_content3"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_register_bg"
        android:hint="   에러 내용 "
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        app:layout_constraintTop_toTopOf="@id/machine_data3"
        app:layout_constraintRight_toLeftOf="@id/checkBox3"
        android:layout_marginRight="10dp"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:buttonTint = "#007bff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data3"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/machine_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비: 의장"
        android:textColor="#000000"
