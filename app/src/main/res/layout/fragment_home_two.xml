<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/machine_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비:"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무게(kg):"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name1" />

    <TextView
        android:id="@+id/machine_data1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/machine_data1"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name1" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data1"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/machine_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_data1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="압력(kg):"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/machine_data2"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name2" />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data2"
        android:layout_marginRight="30dp" />


    <TextView
        android:id="@+id/machine_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_data2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거리(cm):"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/machine_data3"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name3" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data3"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/machine_name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설비:"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_data3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온도('C):"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/machine_data4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/machine_data4"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/machine_name4" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/machine_data4"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/sendError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="에러 전송"
        android:background="@drawable/login_btn"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/checkBox4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>