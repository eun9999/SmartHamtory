<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/location_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차체조립"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/location_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/location_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도장"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/location_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/location_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프레스"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/location_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_1"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/location_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의장"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/location_box"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_2"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/location_press"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:src="@drawable/ic_baseline_my_location_24"
        app:layout_constraintLeft_toLeftOf="@id/location_1"
        app:layout_constraintTop_toBottomOf="@id/location_2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rssitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_3"
        android:gravity="center"
        android:textSize="30dp"
        android:text="rssi : "
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>